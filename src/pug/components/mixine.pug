mixin menu(mainMenu, colorTheme="light")
    .navigation 
        .logo 
            img(src="img/logo.png", alt="logo misocial")
            p(class=colorTheme) misocial
        nav 
            ul(class=colorTheme).menu
                for item in mainMenu 
                    li  
                        a(href=item[1]) #{item[0]}
        
