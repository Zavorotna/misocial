mixin card(oneCard)
    figure.card-figure 
        figcaption 
            img(src=oneCard.img, alt=oneCard.alt) 
            p.personal #{oneCard.personal}   
            p.price 
                span.currency #{oneCard.currensy}
                b #{oneCard.price} / 
                if oneCard.isMonth 
                    | month
                else 
                    | year
            ul.description
                for onetext in oneCard.description 
                    li #{onetext}
            a(href=oneCard.href) #{oneCard.btnText}

